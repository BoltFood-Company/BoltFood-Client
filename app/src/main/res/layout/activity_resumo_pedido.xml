<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_purple_gradient"
    android:elevation="90dp"
    android:orientation="vertical"
    app:cardCornerRadius="12dp">

    <ProgressBar
        android:id="@+id/progressCircleResumoPedido"
        style="@style/MyProgressBar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nomeResumoPedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome Restaurante"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/numeroPedidoResumo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:text="NÂ¹ 0001"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    tools:visibility="visible" />
            </LinearLayout>


            <TextView
                android:id="@+id/precoResumoPedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Total: R$ 0,00"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="Itens:"
                android:textColor="@color/white"
                android:textSize="18dp"
                tools:visibility="visible" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerResumoPedido"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</RelativeLayout>

